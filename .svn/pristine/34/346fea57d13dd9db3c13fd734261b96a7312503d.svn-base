<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/seventy_six_dp"
        android:layout_height="@dimen/seventy_six_dp"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:max="@integer/one_hundred"
        android:progress="@integer/one_hundred"
        android:progressDrawable="@drawable/circle_progress_background" />

    <ProgressBar
        android:id="@+id/circle_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="@dimen/seventy_six_dp"
        android:layout_height="@dimen/seventy_six_dp"
        android:layout_centerInParent="true"
        android:max="@integer/one_hundred"
        android:rotation="@integer/minus_ninety"
        android:indeterminate="false"
        android:scaleY="@integer/minus_one"
        android:progressDrawable="@drawable/circle_progress_foreground" />

</RelativeLayout>