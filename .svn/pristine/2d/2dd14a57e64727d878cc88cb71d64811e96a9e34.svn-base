package com.smarcom.smarpay.helper;

import android.support.v4.app.FragmentManager;

import com.smarcom.smarpay.fragment.ErrorDialogFragment;

public class DialogHelper {

    public static void  showErrorDialogFragment(FragmentManager fragmentManager,  String message) {
        ErrorDialogFragment dialogFragment = ErrorDialogFragment.newInstance(message);
        dialogFragment.show(fragmentManager, "ErrorDialog");
    }
}
